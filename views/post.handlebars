<div class="">
    <div class="flex post">
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}} </p>
    </div>
    <div class="">
        <p>{{post.content}}</p>
    </div>
</div>
{{#if logged_in}}
<div>
    <form class="form comment-form">
        <input type="hidden" id="post_id" name="post_id" value="{{post.id}}">
        <div class="form-group">
            <label for="comment">Comment</label>
            <input class="form-input" type="text" id="comment" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
{{else}}
<h3>Comments</h3>
<p><a href="/login">Login</a> to post comments</p>
{{/if}}
<!-- Loop over each post in the posts array -->
{{#each comments as |comment| }}
<div class="comment">
    <p>{{comment.content}}</p>
    <p>--{{comment.user.username}}, {{format_date comment.date_created}}</p>
</div>
{{/each}}
<script src="../js/comment.js"></script>