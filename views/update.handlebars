<div>
    <h2>Edit Post</h2>
    <form class="form update-form">
        <input type="hidden" id="post_id" name="post_id" value="{{post.id}}">
        <div class="form-group">
            <label for="title-update">Title</label>
            <input class="form-input" type="text" id="title-update" value="{{post.title}}">
        </div>
        <div class="form-group">
            <label for="content-update">Content</label>
            <input class="form-input" type="text" id="content-update" value="{{post.content}}">
        </div>
        <div class="form-group">
            <button class="btn btn-primary wide" type="submit">Update Post</button>
        </div>
    </form>
    <form class="form delete-form">
        <input type="hidden" id="post_id" name="post_id" value="{{post.id}}">
        <div class="form-group">
            <button class="btn btn-primary wide" type="submit">Delete</button>
        </div>
    </form>
</div>
<form class="form comment-form">
    <input type="hidden" id="post_id" name="post_id" value="{{post.id}}">
    <div class="form-group">
        <label for="comment">Comment</label>
        <input class="form-input" type="text" id="comment" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
</div>
<!-- Loop over each comment in the comments array -->
{{#each comments as |comment| }}
<div class="comment">
    <p>{{comment.content}}</p>
    <p>--{{comment.user.username}}, {{format_date comment.date_created}}</p>
</div>
{{/each}}
<script src="../../js/comment.js"></script>
<script src="../../js/update.js"></script>
<script src="../../js/delete.js"></script>